{
    "manifest_version": 3,
    "name": "Skipper",
    "version": "1.3",
    "description": "Skipping stuff on Netflix and Prime Video to save your time or your laziness",
    "icons": {
        "16": "icons/skipper-icon-134098h7th034f.png",
        "48": "icons/skipper-icon-134098h7th034f.png",
        "128": "icons/skipper-icon-134098h7th034f.png"
    },
    "permissions": [
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://www.netflix.com/*",
        "https://www.primevideo.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.netflix.com/*",
                "https://www.primevideo.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/skipper-icon-134098h7th034f.png"
    }
}